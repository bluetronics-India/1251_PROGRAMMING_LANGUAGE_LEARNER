<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:gravity="center_horizontal" >

    <EditText
        android:id="@+id/confirmpass"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/passdetail"
        android:layout_alignRight="@+id/passdetail"
        android:layout_marginBottom="17dp"
        android:layout_centerVertical="true"
        android:background="@drawable/signup"
        android:ems="10"
        android:hint=" Confirm Password"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:textStyle="normal"  />

    <EditText
        android:id="@+id/passdetail"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_above="@+id/confirmpass"
        android:layout_alignLeft="@+id/usernamedetail"
        android:layout_alignRight="@+id/usernamedetail"
        android:layout_marginBottom="17dp"
        android:background="@drawable/signup"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:textStyle="normal"  />

    <EditText
        android:id="@+id/usernamedetail"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_above="@+id/passdetail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="@drawable/signup"
        android:ems="10"
        android:hint=" Username"
        android:fontFamily="sans-serif"
        android:textStyle="normal"  >

        <requestFocus android:layout_width="wrap_content" />

    </EditText>

    <EditText
        android:id="@+id/action1"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="#13475b"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:text="        Enter Details"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="normal" />

    <CheckBox
        android:id="@+id/pvisible1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/emaildetail"
        android:layout_alignRight="@+id/emaildetail"
        android:layout_below="@+id/emaildetail"
        android:checked="true"
        android:text="Show Password"
        android:fontFamily="sans-serif"
        android:textStyle="normal" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pvisible1"
        android:layout_alignRight="@+id/pvisible1"
        android:layout_below="@+id/pvisible1"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif"
        android:text="Save"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/emaildetail"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/confirmpass"
        android:layout_below="@+id/confirmpass"
        android:background="@drawable/signup"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint=" E-mail"
        android:inputType="textEmailAddress"
        android:textStyle="normal" />

    <Button
        android:id="@+id/iconn"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/action1"
        android:background="@drawable/whiteleft"
        android:fontFamily="sans-serif"
        android:textStyle="normal" />
    
</RelativeLayout>
